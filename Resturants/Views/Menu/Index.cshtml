<!-- Hero Section End -->
<!--Breakfast Section Start -->
<section id="menupage-1-breakfast">
	<div class="container line menupage-1-breakfast-mt-100">
		<span class="line-3"></span>
		<span class="line-4"></span>
		<span class="line-5"> </span>
		<div class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="3s">
			<div class="menupage-1-breakfast-top">
				<p class="menupage1-break-txt1"><span class="pr-10"><img src="~/assets/images/Homepage1/yellow-star.png" alt="yellow-star"></span>BREAKFAST<span class="pf-10"><img src="~/assets/images/Homepage1/yellow-star.png" alt="yellow-star"></span></p>
				<h2 class="menupage1-break-txt2">Great & Peaceful Breakfast</h2>
				<p class="menupage1-break-txt3">Available: Monday to Sunday 8am to 11am</p>
			</div>
			<div class="menupage-1-breakfast-bottom">
				<h3 class="d-none">Breakfast</h3>
				<div class="tab-description">
					@foreach (Menu menu in Model.Menus)
					{
						<a href="single-shop.html">
							<div class="homepage1-menu-content">
								<div class="homepage1-menu-left">
									<img src="~/assets/images/@menu.Image" alt="menu-item-img">
								</div>
								<div class="homepage1-menu-right">
									<h4 class="tab-menu-txt1">@menu.Name</h4>
									<p class="tab-menu-txt2">@menu.Description</p>
									<h5 class="tab-menu-txt3">$@menu.Price</h5>
								</div>
							</div>
						</a>
					}
				</div>

				<!-- Burda QR kodu əlavə edilir -->
				<div class="qr-code-section" style="margin-top: 30px; text-align: center;">
					<h3 style="color: white;">QR Kodu ilə Menyuya Bax</h3>
					<img src="/assets/images/QR.jpeg" alt="Menyu QR Kodu" style="width: 200px; height: 200px;" />
				</div>

			</div>
		</div>
	</div>
</section>
<!--Breakfast Section End -->
