@model Resturants.ViewModels.User.LoginVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Restoran Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: url('/images/restaurant-bg.jpg') no-repeat center center;
            background-size: cover;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 10px;
        }

        .btn-login {
            background-color: #a83232;
            color: white;
        }

            .btn-login:hover {
                background-color: #8b2a2a;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-4 login-container">
            <h3 class="text-center mb-4">Daxil ol</h3>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="UserNameOrEmail" class="form-label">İstifadəçi adı və ya Email</label>
                    <input asp-for="UserNameOrEmail" class="form-control" placeholder="Email və ya username" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifrə</label>
                    <input asp-for="Password" class="form-control" placeholder="Şifrə" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Yadda saxla</label>
                </div>
                <button type="submit" class="btn btn-login w-100">Daxil ol</button>
            </form>
        </div>
    </div>
</body>
</html>
