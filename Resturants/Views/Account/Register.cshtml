@model Resturants.ViewModels.User.RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Restoran Qeydiyyat</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: url('/images/restaurant-bg.jpg') no-repeat center center;
            background-size: cover;
        }

        .register-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 10px;
        }

        .btn-register {
            background-color: #28a745;
            color: white;
        }

            .btn-register:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-5 register-container">
            <h3 class="text-center mb-4">Qeydiyyat</h3>
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad</label>
                    <input asp-for="Name" class="form-control" placeholder="Ad" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Soyad</label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyad" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">İstifadəçi adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="İstifadəçi adı" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifrə</label>
                    <input asp-for="Password" class="form-control" placeholder="Şifrə" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">Təkrar Şifrə</label>
                    <input asp-for="CurrentPassword" class="form-control" placeholder="Təkrar Şifrə" type="password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-register w-100">Qeydiyyatdan keç</button>
            </form>
        </div>
    </div>
</body>
</html>

