<!-- Team Section Start -->
<section id="chefspage1-team-section">
	<div class="container ptb-100 line">
		<span class="line-3"></span>
		<span class="line-4"></span>
		<span class="line-5"> </span>
		<h2 class="d-none">Chefs Page</h2>
		<h3 class="d-none">Chefs Details</h3>

		<div class="chefspage1-team-section-full">
			@foreach(Chef chef in Model.Chefs)
			{
				<div class="chefs1-team-slide wow fadeInUp" data-wow-duration="1s" data-wow-delay="3.5s">
					<div class="content-overlay-team-home3">
						<div class="content-overlay"></div>
						<img src="~/assets/images/@chef.Image" alt="team-img" class="img-fluid w-100">
						<div class="content-details fadeIn-right">
							<a href="https://www.facebook.com/" class="home3-team-overlay-content" target="_blank">Facebook</a>
							<a href="https://www.instagram.com/" class="home3-team-overlay-content" target="_blank">Instagram</a>
							<a href="https://twitter.com/" class="home3-team-overlay-content" target="_blank">Twitter</a>
						</div>
					</div>
					<h4 class="home3-team-txt3">@chef.Name @chef.Surname</h4>
					<p class="home3-team-txt4">@chef.Specialization</p>
				</div>
			}

		</div>
	</div>
</section>
<!-- Team Section End -->
