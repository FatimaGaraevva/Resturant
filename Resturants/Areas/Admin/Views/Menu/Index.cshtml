@using Resturants.ViewModels.Meal
@model List<GetMenuVM>

@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Meals</h4>
                <a asp-action="create" class="btn btn-success">CREATE</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Rating</th>
                                <th>Available</th>
                                <th>Chef</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetMenuVM meal in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <img src="~/assets/images/@meal.Image" style="width:60px; height:auto;" />
                                    </td>
                                    <td>@meal.Name</td>
                                    <td>@meal.Price.ToString("C")</td>
                                    <td>@meal.Description</td>
                                    <td>
                                        @(meal.AverageRating.HasValue? meal.AverageRating.Value.ToString("0.0") : "N/A")
                                    </td>
                                    <td>
                                        @(meal.IsAvailable ? "Yes" : "No")
                                    </td>
                                    <td>@meal.ChefFullName</td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@meal.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@meal.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="detail" asp-route-id="@meal.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

